<%- include layout/header %>

        <div class="page-data">
            
            <form method="post" enctype="multipart/form-data"  action="/user/edit/<%=data[0].id%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Name</td><td>: <input type="text" name="username" value="<%=data[0].username%>" required></td>
                 </tr>
                
                <tr>
                    <td class="label">Password</td><td>: <input type="text" value="<%=data[0].password%>" name="password" required></td>
                 </tr>
                  <tr>
                    <td class="label">Image: <img src="../../lib/user/images/<%=data[0]['image_name'] %>" height="100" width="100 " /> </td><td>:  <input type="file" name="thumbnail"  /></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layout/footer %>
